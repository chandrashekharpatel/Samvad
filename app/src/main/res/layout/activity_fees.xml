<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fees">

    <TextView
        android:id="@+id/fd_std_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/tv_textColor"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fd_std_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:textColor="@color/tv_textColor"
        android:textSize="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow"
        android:gravity="center"
        android:text="Fee Detail"
        android:textAllCaps="true"
        android:textColor="@color/tv_textColor"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fd_std_totalFees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textAllCaps="true"
        android:textColor="@color/tv_textColor"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/fd_std_lastPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/tv_textColor"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/fd_std_dueAmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/tv_textColor"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/fd_std_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/tv_textColor"
        android:textSize="18dp" />


</LinearLayout>